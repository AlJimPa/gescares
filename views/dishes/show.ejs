<!-- stringify content from text files. TODO retrieve data from controller -->
<% if (dish !== undefined && dish !== null) { %>
	<h1><%= dish.name %></h1>
	<div class="image">
		<% if (dish.Images.length > 0) { %>
		<a href="<%= dish.Images[0].link %>" title="<%= dish.Images[0].description %>">
			<img src="<%= dish.Images[0].source %>" alt="<%= dish.Images[0].description %>">
		</a>
		<% } %>
	</div>
	<div class="dishData">
		<div class="dish-type"><strong>Tipo </strong><%= dish.Type.text %></div>
		<div class="dish-categories">
			<strong>Categorias</strong>
			<ul>
				<% for (var i = 0; i < dish.Categories.length; i++){ %>
				<li class="tag"><%= dish.Categories[i].text %></li>
				<% } %>
			</ul>
		</div>
		<div class="dishDescription">
			<strong>Descripción</strong>
			<p><%= dish.description %></p>
		</div>
		<div class="dishComponents">
			<strong>Componentes</strong>
			<ul>
				<% for (var i = 0; i < dish.DishComponents.length; i++){ %>
				<li class="tag"><%= dish.DishComponents[i].text %></li>
				<% } %>
			</ul>
		</div>
		<div class="dishAllergenics">
			<strong>Alérgenos</strong>
			<ul>
				<% for (var i = 0; i < dish.DishAllergenics.length; i++) { %>
				<li class="tag"><%= dish.DishAllergenics[i].text %></li>
				<% } %>
			</ul>
		</div>
		<div class="dishPricing">
			<strong>Precios</strong>
			<% for (var i = 0; i < dish.Prices.length; i++) { %>
			<div>
				<span><%= dish.Prices[i].concept %></span>
				<span><%= dish.Prices[i].price %>€</span>
			</div>
			<% } %>
		</div>
		<div class="dish-gallery">
			<strong>Galería</strong>
			<% for (var i = 0; i < dish.Images.length; i++) { %>
			<a href="<%= dish.Images[i].link || dish.Images[i].source %>" title="<%= dish.Images[i].description %>" target="_blank">
				<img src="<%= dish.Images[i].source %>" alt="<%= dish.Images[i].description %>">
			</a>
			<% } %>
		</div>
	</div>
<% } %>
